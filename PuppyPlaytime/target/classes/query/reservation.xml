	<!-- 케이지룸 조회 -->
	<select id = "listRoom" resultType="cageroom">
		SELECT 	c_no,
   				c_kind,
   				c_type,
   				c_price,
    			c_explain,
    			c_picture,
    			c_status,
    			c_usestatus
    	FROM cageroom_tbl
    	WHERE c_usestatus = 'unusing'
    	ORDER BY c_no desc
	</select>
	
